<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imgUser"
        android:text="Janavi"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imgUser"
        android:text="F - 28"
        android:layout_below="@id/txtName"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="Eng, Hin"
        android:textColor="@color/grey1" />

    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/txtLang"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/star" />

    <TextView
        android:id="@+id/txtRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLang"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="4.6"
        android:textColor="@color/grey1" />


    <TextView
        android:id="@+id/txtBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgUser"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="This is my story and I have overcome all..."
        android:textColor="@color/grey1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBio"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Exp : 102 Hrs"
        android:textColor="@color/grey2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtCutAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBio"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/txtExp"
        android:text="Rs 15"
        android:textColor="@color/grey1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtActualAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBio"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/txtCutAmount"
        android:text="Rs 5"
        android:textColor="@color/black"
        android:textSize="15sp" />

<ImageView
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:layout_marginEnd="20dp"
    android:src="@drawable/notification"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/txtBio"
    android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnTalkNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:background="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtBio"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="Talk Now"
        android:textColor="@color/white" />


</RelativeLayout>